<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_7"
    android:orientation="vertical"
    android:paddingHorizontal="70dp"
    android:gravity="center_horizontal"
    tools:context=".AddingOrdersAct">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="30dp"
        android:text="Adding Orders"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/o_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="ENTER ACTION: Deliver or Pickup"
        android:padding="15dp" />

    <EditText
        android:id="@+id/o_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="ENTER ADDRESS"
        android:padding="15dp" />

    <EditText
        android:id="@+id/o_truck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="ENTER TRUCK SIZE: S,M,L"
        android:padding="15dp" />

    <EditText
        android:id="@+id/o_equipment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="ENTER EQUIPMENT"
        android:padding="15dp" />

    <EditText
        android:id="@+id/o_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:inputType="textPersonName"
        android:hint="ENTER SIZE: S,M,L" />

    <EditText
        android:id="@+id/o_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:inputType="textPersonName"
        android:hint="ENTER DATE" />

    <EditText
        android:id="@+id/o_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:inputType="textPersonName"
        android:hint="ENTER Time" />

    <EditText
        android:id="@+id/o_editby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:hint="ENTER EDITBY" />

    <Button
        android:id="@+id/button6"
        android:layout_width="149dp"
        android:layout_height="71dp"
        android:layout_marginTop="50dp"
        android:padding="15dp"
        android:text="submit" />
</LinearLayout>